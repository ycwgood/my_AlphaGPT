# AlphaGPT 配置文件模板
# 复制此文件为 config.yaml 并填入真实的配置值

# Tushare API 配置
tushare:
  token: "your_tushare_token_here"  # 请在 https://tushare.pro 注册获取 token
  timeout: 30  # API 请求超时时间（秒）

# 数据配置
data:
  ts_code: "600519.SH"  # 股票代码（Tushare 格式，如 000001.SZ 平安银行）
  start_date: "20150101"  # 开始日期 YYYYMMDD
  end_date: "20201130"    # 训练集结束日期 YYYYMMDD
  test_end: "20251231"    # 测试集结束日期 YYYYMMDD（数据获取的最后日期）

# 因子生成配置
factor:
  max_seq_len: 6          # 最大序列长度
  min_op_count: 2         # 最小操作数
  num_factors: 10         # 生成因子数量

# DeepSeek API 配置
deepseek:
  api_key: "your_deepseek_api_key_here"  # DeepSeek API Key
  base_url: "https://api.deepseek.com"   # API 基础 URL
  model: "deepseek-chat"                  # 使用的模型
  timeout: 60                             # API 超时时间（秒）
  temperature: 0.7                        # 生成温度

# 回测配置
backtest:
  position_scale: 0.3     # 仓位比例

# 日志配置
logging:
  level: "INFO"           # 日志级别: DEBUG, INFO, WARNING, ERROR
  log_file: "logs/alphagpt.log"  # 日志文件路径

# 随机种子（用于结果可复现）
random_seed: 42
